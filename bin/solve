#!/usr/bin/env python

import importlib.util as importlib
import os
import sys
import uuid

from sys import argv

from euler.definitions import DESK_DIR, DRAWER_DIR, SOLVED_DIR
from euler.problem import Script, Problem


assert __name__ == '__main__'

if len(argv) < 2: sys.exit('Please specify a problem number, filename or path')

try:
    problem = Problem.from_file(argv[1])
except Exception as e:
    sys.exit(e)

# register the module so that it can be imported if necessary.
# e.g. the pickle library can't dump classes that it cannot import.
sys.modules[problem.module.__name__] = problem.module

result = problem.solve()

print(result)
